{
  "name": "file-templates-by-10takla",
  "displayName": "file templates by 10takla",
  "description": "allows you to create flexible file templates, file bundles and template projects",
  "version": "1.6.6",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "10takla",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-templates.createNewFile",
        "title": "New Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "file-templates.createNewFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Настройки моего расширения",
      "properties": {
        "fileTemplates.enableProjectDir": {
          "type": "boolean",
          "default": true,
          "description": "Хранить шаблоны в каталоге проекта."
        },
        "fileTemplates.fileNamePrefixes": {
          "type": "object",
          "default": {
            "upperCaseFirstLetter": "{uF}",
            "lowerCaseFirstLetter": "{lF}",
            "upperCase": "{u}",
            "lowerCase": "{l}"
          },
          "description": "Префиксы для имен файлов."
        },
        "fileTemplates.defaultCase": {
          "type": "string",
          "default": "{uF}",
          "description": "Префикс по умолчанию для имен файлов."
        },
        "fileTemplates.caseSettings": {
          "type": "object",
          "default": {
            ".tsx": "{uF}.tsx",
            ".module.scss": "{uF}.module.scss",
            ".type.ts": "{lF}.type.ts",
            "Selector.ts": "{lF}Selector.ts",
            "Service.ts": "{lF}Service.ts",
            "Slice.ts": "{lF}Slice.ts",
            "Provider.ts": "{uF}Provider.ts"
          },
          "description": "Настройки форматирования имен файлов."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}